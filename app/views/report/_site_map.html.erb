<div id='siteMap' class='siteMap' >
</div>

<%= javascript_tag do -%>

  window.FK.mapCenterLatitude = <%= @site.getMapCenter()['latitude'] %>;
  window.FK.mapCenterLongitude = <%= @site.getMapCenter()['longitude'] %>;
  window.FK.mapZoomLevel = <%= @site.getMapZoomLevel() %>;

  var siteIsLake = false;
  <% if @site.water_body_type == 'lake' %>
    siteIsLake = true;
  <% end %>

  var mapLineData = [];
  <% @site.getMapLineData().each do |mld| %>
    var mapLine = [];
    <% mld.each do |p| %>
      mapLine.push( new google.maps.LatLng(<%= p['latitude'] %>, <%= p['longitude'] %>) );
    <% end %>
    mapLineData.push( mapLine );
  <% end %>

<% end %>