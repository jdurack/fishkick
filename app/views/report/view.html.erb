<% unless @site %>
  <h4>Site not found</h4>
  <a href='/'>Go back</a>
<% else %>

  <h1>Fishing Report for <%= @site.name %></h1>

  <%= render @site.fish_scores %>

  <div class='row'>
    <div class='col-md-7'>
      <% if @site.description %>
        <h4>Description of <%= @site.name %></h4>
        <p>
          <%= @site.description %>
        </p>
      <% end %>
    </div>
    <div class='col-md-5'>
      <% if @site.site_images.size() > 0 %>
        <%= render 'site_image_carousel', locals: {site: @site} %>
      <% end %>
      <% if @site.hasGeoData() %>
        <%= render 'site_map', locals: {site: @site} %>
      <% end %>
    </div>
  </div>
  

  <div class='row'>
    <div class='col-md-1'>
      Fish
    </div>
    <div class='col-md-11'>
      <div class='row'>
        <% for i in 0..11 %>
          <div class='col-md-1'>
            <%= I18n.t('date.abbr_month_names')[i+1] %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render @site.site_fish_infos %>

<% end %>