<div class='row'>
  <div class='col-md-12'>
    <% if f.object.new_record? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    <% else %>
      <img src='<%= f.object.image %>' class='imagePreview'/>
    <% end %>
    <div class='siteImageDeleteButton'>
      <%= f.link_to_remove 'delete', class:'btn btn-default' %>
    </div>
  </div>
</div>