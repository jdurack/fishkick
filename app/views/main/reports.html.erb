<% content_for :head do %>
  <%= javascript_include_tag 'main' %>  
<% end %>

<% content_for :title do %>
  Fishing Reports
<% end %>

<table>
  <tr>

    <td class='reportLinksTableCell'>
      <div class='reportLinksBox'>
        <div class='fishingReportsTitle'>Fishing Reports</h1>

        <% @sites.each do |site| %>
          <div class='reportLinkBox'>
            <a class='reportLink' href='/fishing-report/<%= site.name_url %>' alt='<%= site.name %> fishing report'>
              <%= site.name %>
            </a>
          </div>
        <% end %>
        </div>
      </div>
    </td>

    <td>
      <%= image_tag('dusy-vertical.jpg', :class => 'reportsPageImage hidden-xs hidden-sm') %>
    </td>

  </tr>

</table>

<%= javascript_tag do -%>
  window.FK.init()
<% end %>