<% if site_fish_info.is_active %>
  <div class='row'>
    <div class='col-md-1'>
      <%= site_fish_info.fish.name %>
    </div>
    <div class='col-md-11'>
      <div class='row'>
        <% for i in 0..11 %>
          <div class='col-md-1'>
            <% if site_fish_info['month_value_' + i.to_s ] == 0 %>
              no
            <% elsif site_fish_info['month_value_' + i.to_s ] <= 0.25 %>
              low
            <% elsif site_fish_info['month_value_' + i.to_s ] <= 0.5 %>
              ok
            <% elsif site_fish_info['month_value_' + i.to_s ] <= 0.75 %>
              good
            <% else %>
              great
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>