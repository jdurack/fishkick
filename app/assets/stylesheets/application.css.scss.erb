body {
  background-color: #f2f2f2;
  font-family: "Lato";
  font-weight: 300;
  font-size: 16px;
  color: #555;
  padding-top: 50px;

  -webkit-font-smoothing: antialiased;
  -webkit-overflow-scrolling: touch;
}

/* Footer, layout help from here:
  http://www.lwis.net/journal/2008/02/08/pure-css-sticky-footer/
*/
html, body, #contentContainer {
  height: 100%;
}

body > #contentContainer {
  height: auto;
  min-height: 100%;
}

/* Titles */
h1, h2, h3, h4, h5, h6 {
  font-family: "Raleway";
  font-weight: 300;
  color: #333;
}

.dataChart {
  width: 500px;
  height: 250px;
  margin: 10px;
}

.mainContentBox {
  margin-top: 19px;
  @media (max-width: 767px) {
    margin-top: 0px;
  }
  margin-bottom: 48px;
}


.footer {
  clear: both;
  position: relative;
  z-index: 10;
  height: 3em;
  margin-top: -3em;
  background: #222222;
  padding-top: 14px;
  text-align: right;
  color: white;
  width: 100%;
}

.fishkickLogo {
  background-repeat: no-repeat;
  background-image: url("<%= image_path('logo/fishkick_logo_50px.png') %>");
  height: 50px;
  width: 161px;
  @media (max-width: 767px) {
    background-image: url("<%= image_path('logo/fishkick_logo_32px.png') %>");
    height: 32px;
    width: 103px;
  }
}